<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Ex03 jQuery</title>
  <style>
    body { font-family: Arial, sans-serif; text-align: center; margin: 50px; }
    #ft_list { margin-top: 20px; display: flex; flex-direction: column-reverse; align-items: center; }
    #ft_list div {
      background: lightblue; padding: 10px 20px; margin: 5px 0;
      border-radius: 5px; cursor: pointer;
    }
    #ft_list div:hover { background: deepskyblue; color: white; }
  </style>
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script src="todo.js"></script>
</head>
<body>
  <h1>To Do List</h1>
  <button id="newBtn">New</button>
  <div id="ft_list"></div>
</body>
</html>
$(document).ready(function () {
  $("#newBtn").click(function () {
    let task = prompt("Enter a new TO DO:");
    if (task && task.trim() !== "") {
      let $todo = $("<div></div>").text(task.trim());

      $todo.click(function () {
        if (confirm("Do you want to remove this TO DO?")) {
          $(this).remove();
        }
      });

      $("#ft_list").append($todo);
    }
  });
});
